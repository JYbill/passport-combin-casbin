datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model CasbinRule {
  id    String  @id @default(auto()) @map("_id") @db.ObjectId
  ptype String
  v0    String?
  v1    String?
  v2    String?
  v3    String?
  v4    String?
  v5    String?

  @@map("casbin_rule")
}

model User {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  username String @unique // 查询直接根据casbin查，不用逻辑外键查，加唯一即可
  nickname String // 昵称
  password String
  salt     String // 信息摘要加密盐

  gmt_create   DateTime @default(now())
  gmt_modified DateTime @default(now()) @updatedAt
  isAdmin      Boolean  @default(false) // 是否是管理员，作用于casbin的超级管理员权限

  @@map("users")
}

model Github {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  githubId  String @unique
  username  String
  nickname  String
  avatarUrl String // 头像
  email     String
  bio       String // 个人简介
  location  String // 地域
  webToken  String // web token码

  gmt_create   DateTime @default(now())
  gmt_modified DateTime @default(now()) @updatedAt

  @@map("github")
}

// 需要手动添加，前端只允许选择已添加的
model Role {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  roleName     String   @unique
  description  String? // 描述
  gmt_create   DateTime @default(now())
  gmt_modified DateTime @default(now()) @updatedAt

  @@map("roles")
}

// 需要手动添加，前端只允许选择已添加的
model PermissionGroup {
  id                  String   @id @default(auto()) @map("_id") @db.ObjectId
  permissionGroupName String   @unique
  description         String? // 描述
  gmt_create          DateTime @default(now())
  gmt_modified        DateTime @default(now()) @updatedAt

  @@map("permission_groups")
}

// 需要手动添加，前端只允许选择已添加的
model Permission {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  permissionName String   @unique // 接口
  description    String?
  gmt_create     DateTime @default(now())
  gmt_modified   DateTime @default(now()) @updatedAt

  @@map("permissions")
}

// 路由表
model Route {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  url    String
  method String

  @@map("route")
}
